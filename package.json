{
  "name": "portfolio",
  "scripts": {
    "minify": "gulp minify",
    "unminify": "gulp unminify",
    "format": "prettier --config .prettierrc \"**/*.+(js|json)\" --write"
  },
  "author": "Stan Konovalov",
  "homepage": "http://mtyeyes.github.io/portfolio",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 11
    },
    "ignorePatterns": [
      "gulpfile.js"
    ],
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ]
    }
  },
  "dependencies": {
    "eslint": "^7.7.0"
  },
  "devDependencies": {
    "gulp": "^4.0.2",
    "gulp-beautify": "^3.0.0",
    "gulp-csso": "^4.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-minify-inline": "^1.1.0",
    "gulp-plumber": "^1.2.1",
    "prettier": "^2.2.1"
  }
}
